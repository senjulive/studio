# Builder.io Configuration
NEXT_PUBLIC_BUILDER_API_KEY=your_builder_api_key_here
BUILDER_PRIVATE_KEY=your_builder_private_key_here

# Database Configuration (if using Neon/Supabase)
DATABASE_URL=postgresql://username:password@host:port/database
DIRECT_URL=postgresql://username:password@host:port/database

# Authentication (if using NextAuth.js)
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=https://your-domain.com

# API Keys for External Services
NEXT_PUBLIC_COINAPI_KEY=your_coin_api_key_here
NEXT_PUBLIC_GOOGLE_AI_API_KEY=your_google_ai_key_here

# Email Service (if using)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Analytics (if using)
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX
NEXT_PUBLIC_GTM_ID=GTM-XXXXXXX

# Environment
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://your-domain.com

# Redis (if using for caching)
REDIS_URL=redis://localhost:6379

# Error Monitoring (if using Sentry)
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn
SENTRY_AUTH_TOKEN=your_sentry_auth_token

# File Upload (if using)
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your_cloudinary_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret
